grammar CSSPrimitives
  rule primitive
    hex_value / semi_colon / colon / value / space
  end

  rule hex_value
    "#" (six_digit_hex / three_digit_hex)
  end

  rule six_digit_hex
    three_digit_hex three_digit_hex
  end

  rule three_digit_hex
    hex_char hex_char hex_char
  end

  rule hex_char
    [0-9a-fA-F]
  end

  rule semi_colon
    ";"
  end

  rule colon
    ":"
  end

  rule value
    color / "10px"
  end

  rule color
    "red" / hex_value
  end

  rule space
    " "
  end
end