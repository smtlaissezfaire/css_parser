grammar URL
  rule url
    protocol_with_suffix? domain_with_optional_port path?
  end

  rule protocol_with_suffix
    protocol "://"
  end

  rule domain_with_optional_port
    domain (":" port_number)?
  end

  rule port_number
    positive_number
  end

  rule domain
    string
  end

  rule path
    "/" string?
  end

  rule protocol
    "https" / "http" / "ftp"
  end
end